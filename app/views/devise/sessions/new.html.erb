<div class="text-black">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="text-white bg-blue-500 text-center py-2 flex items-center justify-between">
      <%= link_to(root_path, class: "text-white cursor-pointer ml-2") do %>
        <i class="fas fa-home"></i>
      <% end %>
      <%= link_to("Sign Up", new_registration_path(resource_name), class: "text-white cursor-pointer mr-2") %>
    </div>


    <div class="bg-gray-100 p-8 shadow-md min-h-screen">
      <div class="field mb-4">
        <!-- Hide the label and provide a placeholder, remove border and rounded styles -->
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-3 border-0 rounded-none shadow-md text-gray-800 bg-white", placeholder: "Email" %>
      </div>

      <div class="field mb-4">
        <!-- Hide the label and provide a placeholder, remove border and rounded styles -->
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-3 border-0 rounded-none shadow-md text-gray-800 bg-white", placeholder: "Password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mb-4 flex items-center space-x-2">
          <%= f.check_box :remember_me %>
          <!-- Hide the label and provide a placeholder -->
          <%= f.label :remember_me, class: "text-black", placeholder: "Remember me" %>
        </div>
      <% end %>

      <div class="flex flex-col mb-4 justify-center items-center">
        <div class="text-blue-500">
          <%= link_to("Forgot your password?", new_password_path(resource_name)) %>
        </div>
        <div class="actions mt-2">
          <%= f.submit "Log in", class: "bg-blue-500 text-white px-4 py-2 rounded cursor-pointer" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
